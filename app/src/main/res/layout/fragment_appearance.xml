<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:clickable="true">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="?actionBarSize">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:orientation="vertical">


            <RelativeLayout
                android:id="@+id/rlChatBack"
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                android:layout_marginTop="8dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="24dp"
                    android:background="@color/background"
                    app:cardCornerRadius="18dp"
                    app:cardElevation="0dp">

                    <ImageView
                        android:id="@+id/ivPreview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_add" />

                </androidx.cardview.widget.CardView>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="24dp"
                    android:text="@string/chat_back"
                    android:textColor="@color/main_text"
                    android:textSize="15sp" />

            </RelativeLayout>

            <Switch
                android:id="@+id/switchNight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_margin="8dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:text="@string/light_theme"
                android:textColor="@color/main_text"
                android:textSize="15sp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cvDarkSample"
                android:layout_width="@dimen/picker_outside_width"
                android:layout_height="@dimen/picker_outside_height"
                android:layout_gravity="center"
                android:layout_marginTop="24dp"
                android:background="#15121c"
                android:visibility="gone"
                app:cardCornerRadius="24dp"
                app:cardElevation="0dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="#15121c">

                    <LinearLayout
                        android:layout_width="@dimen/picker_inside_width"
                        android:layout_height="@dimen/picker_inside_height"
                        android:layout_centerInParent="true"
                        android:layout_margin="10dp"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:layout_width="95dp"
                            android:layout_height="match_parent"
                            app:cardCornerRadius="14dp"
                            app:cardElevation="0dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="#1c1826">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:text="@string/sample_text"
                                    android:textColor="#fff"
                                    android:textSize="36dp"
                                    android:textStyle="bold" />

                            </RelativeLayout>

                        </androidx.cardview.widget.CardView>

                        <RelativeLayout
                            android:layout_width="75dp"
                            android:layout_height="match_parent">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:text="@string/sample_text"
                                android:textColor="#fff"
                                android:textSize="36dp"
                                android:textStyle="bold" />

                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="@dimen/picker_small_side_width"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <androidx.cardview.widget.CardView
                                android:layout_width="@dimen/picker_small_side_width"
                                android:layout_height="@dimen/picker_small_side_height"
                                app:cardCornerRadius="14dp"
                                app:cardElevation="0dp">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="#1c1826">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerInParent="true"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginEnd="4dp"
                                            android:text="@string/sample_text"
                                            android:textColor="#ddd"
                                            android:textSize="20dp" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="@string/sample_text"
                                            android:textColor="#aaa"
                                            android:textSize="16dp" />

                                    </LinearLayout>


                                </RelativeLayout>

                            </androidx.cardview.widget.CardView>

                            <androidx.legacy.widget.Space
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/picker_space_height" />

                            <androidx.cardview.widget.CardView
                                android:layout_width="@dimen/picker_small_side_width"
                                android:layout_height="@dimen/picker_small_side_height"
                                app:cardCornerRadius="14dp"
                                app:cardElevation="0dp">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="#1c1826">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerInParent="true"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginEnd="4dp"
                                            android:text="@string/sample_text"
                                            android:textColor="#ddd"
                                            android:textSize="20dp" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="@string/sample_text"
                                            android:textColor="#aaa"
                                            android:textSize="16dp" />

                                    </LinearLayout>

                                </RelativeLayout>

                            </androidx.cardview.widget.CardView>

                        </LinearLayout>


                    </LinearLayout>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:id="@+id/llPicker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:orientation="vertical"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cvLightSample"
                    android:layout_width="@dimen/picker_outside_width"
                    android:layout_height="@dimen/picker_outside_height"
                    android:layout_gravity="center"
                    app:cardCornerRadius="24dp"
                    app:cardElevation="0dp">

                    <RelativeLayout
                        android:id="@+id/rlMain"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center">

                        <LinearLayout
                            android:layout_width="@dimen/picker_inside_width"
                            android:layout_height="@dimen/picker_inside_height"
                            android:layout_centerInParent="true"
                            android:layout_margin="10dp"
                            android:orientation="horizontal">

                            <androidx.cardview.widget.CardView
                                android:layout_width="95dp"
                                android:layout_height="match_parent"
                                app:cardCornerRadius="14dp"
                                app:cardElevation="0dp">

                                <RelativeLayout
                                    android:id="@+id/rlDark"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerInParent="true"
                                        android:text="@string/sample_text"
                                        android:textColor="#fff"
                                        android:textSize="36dp"
                                        android:textStyle="bold" />

                                </RelativeLayout>

                            </androidx.cardview.widget.CardView>

                            <RelativeLayout
                                android:layout_width="75dp"
                                android:layout_height="match_parent">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:text="@string/sample_text"
                                    android:textColor="#fff"
                                    android:textSize="36dp"
                                    android:textStyle="bold" />

                            </RelativeLayout>

                            <LinearLayout
                                android:layout_width="@dimen/picker_small_side_width"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="@dimen/picker_small_side_width"
                                    android:layout_height="@dimen/picker_small_side_height"
                                    app:cardCornerRadius="14dp"
                                    app:cardElevation="0dp">

                                    <RelativeLayout
                                        android:id="@+id/rlLight"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">

                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_centerInParent="true"
                                            android:orientation="horizontal">

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginEnd="4dp"
                                                android:text="@string/sample_text"
                                                android:textColor="#222"
                                                android:textSize="20dp" />

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="@string/sample_text"
                                                android:textColor="#444"
                                                android:textSize="16dp" />

                                        </LinearLayout>


                                    </RelativeLayout>

                                </androidx.cardview.widget.CardView>

                                <androidx.legacy.widget.Space
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/picker_space_height" />

                                <androidx.cardview.widget.CardView
                                    android:layout_width="@dimen/picker_small_side_width"
                                    android:layout_height="@dimen/picker_small_side_height"
                                    app:cardCornerRadius="14dp"
                                    app:cardElevation="0dp">

                                    <RelativeLayout
                                        android:id="@+id/rlExtraLight"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">

                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_centerInParent="true"
                                            android:orientation="horizontal">

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginEnd="4dp"
                                                android:text="@string/sample_text"
                                                android:textColor="#222"
                                                android:textSize="20dp" />

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="@string/sample_text"
                                                android:textColor="#444"
                                                android:textSize="16dp" />

                                        </LinearLayout>

                                    </RelativeLayout>

                                </androidx.cardview.widget.CardView>

                            </LinearLayout>


                        </LinearLayout>

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <com.flask.colorpicker.ColorPickerView
                    android:id="@+id/picker"
                    android:layout_width="@dimen/picker"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="16dp"
                    app:density="12"
                    app:lightnessSlider="true"
                    app:lightnessSliderView="@+id/pickerLight"
                    app:wheelType="FLOWER" />

                <com.flask.colorpicker.slider.LightnessSlider
                    android:id="@+id/pickerLight"
                    android:layout_width="@dimen/picker"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <RelativeLayout
        android:id="@+id/rlBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/popup"
        android:elevation="12dp">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />

        <RelativeLayout
            android:id="@+id/rlHideBottom"
            android:layout_width="match_parent"
            android:layout_height="@dimen/bottomsheet_thumb_height"
            android:background="@color/popup"
            android:tag="main">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/bottomsheet_thumb_height"
                android:layout_alignParentRight="true"
                android:layout_marginRight="12dp"
                android:src="@drawable/ic_chevron_down" />

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="@color/toolbar_text"
                android:textSize="18sp"
                tools:text="Tut ya viebal ves russkiy IT" />


        </RelativeLayout>

        <FrameLayout
            android:id="@+id/flBottom"
            android:layout_width="match_parent"
            android:layout_height="@dimen/bottomsheet_height"
            android:layout_marginTop="@dimen/bottomsheet_thumb_height"
            android:clickable="true" />

    </RelativeLayout>

    <include layout="@layout/toolbar" />

</FrameLayout>