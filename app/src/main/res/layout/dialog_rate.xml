<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@color/popup">
    
    <ImageView
        android:id="@+id/ivXvii"
        android:layout_marginTop="10dp"
        android:src="@drawable/xvii512"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_width="200dp"
        android:layout_height="200dp" />

    <TextView
        android:layout_gravity="center"
        android:textSize="20sp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:gravity="center"
        android:textColor="@color/main_text"
        android:text="@string/like_app"
        android:layout_below="@+id/ivXvii"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:weightSum="3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:gravity="center"
            android:layout_margin="8dp"
            android:textSize="18sp"
            android:textColor="@color/other_text"
            android:text="@string/never"
            android:id="@+id/tvNever"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <TextView
            android:gravity="center"
            android:layout_margin="8dp"
            android:textSize="18sp"
            android:textColor="@color/other_text"
            android:text="@string/not_now"
            android:id="@+id/tvNotNow"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <TextView
            android:gravity="center"
            android:layout_margin="8dp"
            android:textSize="20sp"
            android:textColor="@color/main_text"
            android:text="@string/rate"
            android:id="@+id/tvRate"
            android:layout_weight="1"
            android:textAllCaps="true"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

    </LinearLayout>



</LinearLayout>