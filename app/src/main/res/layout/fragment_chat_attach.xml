<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/rlBack"
    android:layout_width="match_parent"
    android:layout_height="@dimen/send_attach_height">

    <LinearLayout
        android:layout_centerVertical="true"
        android:tag="api20"
        android:orientation="horizontal"
        android:weightSum="6"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:tag="dark"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:src="@drawable/ic_meme"
            android:id="@+id/ivMemes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:tag="dark"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:src="@drawable/ic_sticker"
            android:id="@+id/ivStickers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:tag="dark"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:src="@drawable/ic_photo"
            android:id="@+id/ivGallery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:tag="dark"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:src="@drawable/ic_camera"
            android:id="@+id/ivCamera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:tag="dark"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:src="@drawable/ic_mic_small"
            android:id="@+id/ivVoice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:tag="dark"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:src="@drawable/ic_docs"
            android:id="@+id/ivMaterials"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />



    </LinearLayout>

</RelativeLayout>