<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/llContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/toolbar"
                android:orientation="vertical"
                android:tag="extraLight">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="28dp"
                    android:paddingTop="8dp"
                    android:paddingEnd="28dp"
                    android:paddingBottom="8dp"
                    android:text="@string/private_messages_notifs"
                    android:textColor="@color/other_text"
                    android:textSize="15sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">

                <Switch
                    android:id="@+id/switchShowNotification"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_margin="12dp"
                    android:text="@string/show_notif"
                    android:textColor="@color/main_text"
                    android:textSize="16sp" />

                <Switch
                    android:id="@+id/switchShowName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_margin="12dp"
                    android:text="@string/show_name"
                    android:textColor="@color/main_text"
                    android:textSize="16sp" />

                <Switch
                    android:id="@+id/switchVibrate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_margin="12dp"
                    android:text="@string/vibrate"
                    android:textColor="@color/main_text"
                    android:textSize="16sp" />

                <Switch
                    android:id="@+id/switchSound"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_margin="12dp"
                    android:text="@string/sound"
                    android:textColor="@color/main_text"
                    android:textSize="16sp" />

                <Switch
                    android:id="@+id/switchContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_margin="12dp"
                    android:text="@string/show_content"
                    android:textColor="@color/main_text"
                    android:textSize="16sp" />

                <RelativeLayout
                    android:id="@+id/rlLedColor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/led_lights"
                        android:textColor="@color/main_text"
                        android:textSize="16sp" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="14dp"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="0dp">

                        <ImageView
                            android:id="@+id/ivLedColor"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                    </androidx.cardview.widget.CardView>

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/toolbar"
                android:orientation="vertical"
                android:tag="extraLight">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="28dp"
                    android:paddingTop="8dp"
                    android:paddingEnd="28dp"
                    android:paddingBottom="8dp"
                    android:text="@string/chats_notifs"
                    android:textColor="@color/other_text"
                    android:textSize="15sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">

                <Switch
                    android:id="@+id/switchNotifsChats"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_margin="12dp"
                    android:text="@string/show_chats_notifs"
                    android:textColor="@color/main_text"
                    android:textSize="16sp" />

                <Switch
                    android:id="@+id/switchVibrateChats"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_margin="12dp"
                    android:text="@string/vibrate"
                    android:textColor="@color/main_text"
                    android:textSize="16sp" />

                <Switch
                    android:id="@+id/switchSoundChats"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_margin="12dp"
                    android:text="@string/sound"
                    android:textColor="@color/main_text"
                    android:textSize="16sp" />

                <Switch
                    android:id="@+id/switchLightsChats"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_margin="12dp"
                    android:text="@string/led_lights"
                    android:textColor="@color/main_text"
                    android:textSize="16sp" />

                <Switch
                    android:id="@+id/switchContentChats"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_margin="12dp"
                    android:text="@string/show_content"
                    android:textColor="@color/main_text"
                    android:textSize="16sp" />

                <RelativeLayout
                    android:id="@+id/rlLedColorChats"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/led_lights"
                        android:textColor="@color/main_text"
                        android:textSize="16sp" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="14dp"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="0dp">

                        <ImageView
                            android:id="@+id/ivLedColorChats"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                    </androidx.cardview.widget.CardView>

                </RelativeLayout>

                <Switch
                    android:id="@+id/switchEgg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="21dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginBottom="10dp"
                    android:visibility="invisible" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>