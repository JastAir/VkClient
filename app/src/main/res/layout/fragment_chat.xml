<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.twoeightnine.root.xvii.views.SizeNotifierFrameLayout

        android:id="@+id/flContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="92dp"
            android:src="@android:color/transparent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="?actionBarSize"
            android:orientation="vertical">


            <com.twoeightnine.root.xvii.views.XviiSwipeRefreshLayout
                android:id="@+id/swipeContainer"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                app:srl_direction="bottom">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvChatList"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </com.twoeightnine.root.xvii.views.XviiSwipeRefreshLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/background"
                android:elevation="8dp">

                <include layout="@layout/chat_input_panel" />

            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize">

            <include layout="@layout/toolbar" />

            <RelativeLayout
                android:id="@+id/rlTyping"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/toolbar"
                android:layout_marginLeft="72dp"
                android:layout_marginBottom="3dp"
                android:background="@color/toolbar"
                android:elevation="4dp"
                android:tag="main"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tvTyping"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="2dp"
                    android:text="@string/typing"
                    android:textColor="@color/toolbar_subtext"
                    android:textSize="16dp" />

                <com.twoeightnine.root.xvii.views.TypingView
                    android:id="@+id/typingView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/tvTyping" />

                <androidx.legacy.widget.Space
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/typingView" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlRecordingVoice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/toolbar"
                android:layout_marginLeft="72dp"
                android:layout_marginBottom="3dp"
                android:background="@color/toolbar"
                android:elevation="4dp"
                android:tag="main"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tvRecordingVoice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="2dp"
                    android:text="@string/recording_voice"
                    android:textColor="@color/toolbar_subtext"
                    android:textSize="16dp" />

                <com.twoeightnine.root.xvii.views.TypingView
                    android:id="@+id/typingViewVoice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/tvRecordingVoice" />

                <androidx.legacy.widget.Space
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/typingViewVoice" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlMultiAction"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/popup"
                android:clickable="true"
                android:elevation="6dp"
                android:tag="api20"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/ivCancelMulti"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:src="@drawable/ic_clear"
                    android:tag="dark" />

                <ImageView
                    android:id="@+id/ivMenuMulti"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="12dp"
                    android:src="@drawable/ic_menu"
                    android:tag="dark" />

                <ImageView
                    android:id="@+id/ivForwardMulti"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="16dp"
                    android:layout_toLeftOf="@+id/ivMenuMulti"
                    android:src="@drawable/ic_arrow_right_forward"
                    android:tag="dark" />

                <ImageView
                    android:id="@+id/ivReplyMulti"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="16dp"
                    android:layout_toLeftOf="@+id/ivForwardMulti"
                    android:src="@drawable/ic_reply"
                    android:tag="dark" />

            </RelativeLayout>

        </RelativeLayout>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabHasMore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_marginRight="@dimen/margin16"
            android:layout_marginBottom="72dp"
            android:src="@drawable/ic_chevron_down"
            android:visibility="invisible"
            app:backgroundTint="@color/fab" />

        <RelativeLayout
            android:id="@+id/rlRecord"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#b000"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_mic" />

                <TextView
                    android:id="@+id/tvRecord"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="12dp"
                    android:fontFamily="sans-serif-light"
                    android:textColor="#fff"
                    android:textSize="28sp"
                    tools:text="13:37" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_margin="6dp">

                <TextView
                    android:id="@+id/tvMicHint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="sans-serif-light"
                    android:maxLines="1"
                    android:text="@string/mic_hint"
                    android:textAllCaps="true"
                    android:textColor="#fff"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/tvMicHint"
                    android:src="@drawable/ic_arrow_left" />

            </RelativeLayout>


        </RelativeLayout>

    </com.twoeightnine.root.xvii.views.SizeNotifierFrameLayout>

    <RelativeLayout
        android:id="@+id/rlBottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bottomsheet_height"
        android:background="@color/background"
        android:elevation="12dp"
        app:behavior_hideable="true"
        app:behavior_peekHeight="00dp"
        app:layout_behavior="com.twoeightnine.root.xvii.views.UserLockBottomSheetBehavior">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />

        <RelativeLayout
            android:id="@+id/rlHideBottom"
            android:layout_width="match_parent"
            android:layout_height="@dimen/bottomsheet_thumb_height"
            android:background="@color/popup"
            android:tag="main">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/attachments"
                android:textColor="@color/toolbar_text"
                android:textSize="17sp" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="12dp"
                android:src="@drawable/ic_clear" />

        </RelativeLayout>

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabsBottom"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_below="@+id/rlHideBottom"
            app:tabIndicatorColor="@color/toolbar_text"
            app:tabMode="scrollable"
            app:tabSelectedTextColor="@color/toolbar_text"
            app:tabTextColor="@color/toolbar_subtext" />

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/vpAttach"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/tabsBottom" />

    </RelativeLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
