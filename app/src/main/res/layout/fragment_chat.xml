<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.twoeightnine.root.xvii.views.SizeNotifierFrameLayout

        android:id="@+id/flContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background">

        <ImageView
            android:id="@+id/ivBackground"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="92dp"
            android:src="@android:color/transparent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="?actionBarSize"
            android:orientation="vertical">


            <com.orangegangsters.github.swipyrefreshlayout.library.SwipyRefreshLayout
                android:id="@+id/swipeContainer"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                app:srl_direction="bottom">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rvChatList"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </com.orangegangsters.github.swipyrefreshlayout.library.SwipyRefreshLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/background"
                android:elevation="8dp">

                <include layout="@layout/chat_input_panel" />

            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize">

            <include layout="@layout/toolbar" />

            <RelativeLayout
                android:id="@+id/rlTyping"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/toolbar"
                android:layout_marginBottom="3dp"
                android:layout_marginLeft="72dp"
                android:background="@color/background"
                android:elevation="4dp"
                android:tag="main"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tvTyping"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="2dp"
                    android:text="@string/typing"
                    android:textColor="@color/toolbar_subtext"
                    android:textSize="16dp" />

                <com.twoeightnine.root.xvii.views.TypingView
                    android:id="@+id/typingView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/tvTyping" />

                <android.support.v4.widget.Space
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/typingView" />

            </RelativeLayout>

        </RelativeLayout>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fabHasMore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_marginBottom="72dp"
            android:layout_marginRight="@dimen/margin16"
            android:src="@drawable/ic_chevron_down"
            android:visibility="invisible"
            app:backgroundTint="@color/fab" />

    </com.twoeightnine.root.xvii.views.SizeNotifierFrameLayout>

    <RelativeLayout
        android:id="@+id/rlBottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bottomsheet_height"
        android:background="@color/background"
        android:elevation="12dp"
        app:behavior_hideable="true"
        app:behavior_peekHeight="0dp"
        app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

        <com.twoeightnine.root.xvii.views.LoaderView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />

        <RelativeLayout
            android:id="@+id/rlHideBottom"
            android:layout_width="match_parent"
            android:layout_height="@dimen/bottomsheet_thumb_height"
            android:background="@color/popup">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/attachments"
                android:textColor="@color/main_text"
                android:textSize="17sp" />

        </RelativeLayout>

        <android.support.design.widget.TabLayout
            android:id="@+id/tabsBottom"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_below="@+id/rlHideBottom"
            app:tabMode="scrollable"
            app:tabIndicatorColor="@color/toolbar_text"
            app:tabSelectedTextColor="@color/toolbar_text"
            app:tabTextColor="@color/toolbar_subtext"/>

        <android.support.v4.view.ViewPager
            android:id="@+id/vpAttach"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/tabsBottom" />

    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>
