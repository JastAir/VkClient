<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="12dp"
    android:layout_centerInParent="true"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_centerHorizontal="true"
        android:id="@+id/ivVideo"
        android:layout_margin="@dimen/image_margin"
        android:layout_width="256dp"
        android:layout_height="192dp" />

    <ImageView
        android:layout_centerInParent="true"
        android:src="@drawable/shape_circle_video"
        android:layout_width="80dp"
        android:layout_height="80dp" />

    <ImageView
        android:src="@drawable/play_white"
        android:layout_centerInParent="true"
        android:layout_width="60dp"
        android:layout_height="60dp" />

    <RelativeLayout
        android:id="@+id/rlTime"
        android:layout_alignRight="@+id/ivVideo"
        android:layout_alignBottom="@+id/ivVideo"
        android:background="@drawable/shape_dur_video"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvDuration"
            android:textSize="14sp"
            android:text="12:34"
            android:textColor="@color/icons"
            android:layout_margin="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <TextView
        android:layout_below="@+id/rlTime"
        android:layout_alignLeft="@+id/ivVideo"
        android:layout_alignRight="@+id/ivVideo"
        android:id="@+id/tvTitle"
        style="@style/TextViewStyle.Medium"
        android:maxLines="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>