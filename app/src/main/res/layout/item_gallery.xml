<?xml version="1.0" encoding="utf-8"?>
<com.twoeightnine.root.xvii.views.SquareLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/ivCamera"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="12dp"
            android:src="@drawable/ic_camera" />

        <ImageView
            android:id="@+id/ivThumb"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="1.5dp"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/ivCheck"
            android:scaleX="0"
            android:scaleY="0"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="right"
            android:layout_margin="6dp"
            android:src="@drawable/ic_check_circle" />

        <TextView
            android:id="@+id/tvDuration"
            style="@style/WhiteText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="2dp"
            android:background="@drawable/shape_dur_video"
            android:padding="4dp"
            android:textSize="13sp"
            android:visibility="gone"
            tools:text="0:12" />

    </FrameLayout>


</com.twoeightnine.root.xvii.views.SquareLinearLayout>