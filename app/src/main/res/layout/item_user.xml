<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:background="@drawable/selector_rect"
        android:id="@+id/rlItemContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingEnd="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/item_margin">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="@dimen/item_margin"
            android:layout_marginLeft="@dimen/item_margin"
            android:layout_marginTop="@dimen/item_margin"
            android:id="@+id/civPhoto"
            app:civ_border_width="0dp"
            app:civ_border_color="@color/icons"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Medium Text"
            android:id="@+id/tvName"
            android:textColor="@color/main_text"
            android:maxLines="1"
            android:textSize="18sp"
            android:layout_alignTop="@+id/civPhoto"
            android:layout_toEndOf="@+id/civPhoto"
            android:layout_toRightOf="@+id/civPhoto"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginTop="8dp"/>

        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:id="@+id/ivOnlineDot"
            android:layout_alignBottom="@+id/civPhoto"
            android:layout_alignEnd="@+id/civPhoto"
            android:layout_alignRight="@+id/civPhoto" />

        <TextView
            android:maxLines="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/other_text"
            android:text="Small Text"
            android:id="@+id/tvInfo"
            android:layout_marginTop="@dimen/frame_pad"
            android:layout_below="@+id/tvName"
            android:layout_alignStart="@+id/tvName"
            android:layout_alignLeft="@+id/tvName" />


    </RelativeLayout>

    <View
        android:layout_marginLeft="83dp"
        android:layout_below="@+id/rlItemContainer"
        android:background="@color/divider"
        android:layout_width="match_parent"
        android:layout_height="1px" />

</RelativeLayout>