<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.twoeightnine.root.xvii">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <application
        android:name="com.twoeightnine.root.xvii.App"
        android:allowBackup="true"
        android:icon="@drawable/xvii512"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.twoeightnine.root.xvii.provider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/provider_paths" />
        </provider>

        <receiver
            android:name=".background.longpoll.receivers.RestarterBroadcastReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="restartAction" />
            </intent-filter>
        </receiver>

        <receiver
            android:name=".background.longpoll.receivers.MarkAsReadBroadcastReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="restartAction" />
            </intent-filter>
        </receiver>

        <!--<service android:name=".background.LongPollService" />-->

        <service android:name=".background.longpoll.services.NotificationService" />

        <service android:name=".background.prime.PrimeGeneratorService" />
        <service
            android:name=".background.longpoll.services.NotificationJobIntentService"
            android:exported="true"
            android:permission="android.permission.BIND_JOB_SERVICE" />
        <service
            android:name=".background.prime.PrimeGeneratorJobIntentService"
            android:exported="true"
            android:permission="android.permission.BIND_JOB_SERVICE" />

        <activity
            android:name=".activities.LoginActivity"
            android:screenOrientation="portrait"
            android:theme="@style/SplashTheme">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <activity
            android:name=".activities.RootActivity" />

        <activity
            android:name=".activities.PinActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".photoviewer.ImageViewerActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".activities.GifViewerActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".activities.VideoViewerActivity"
            android:screenOrientation="landscape" />

        <activity
            android:name=".activities.ExceptionActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".activities.TestLandscapeActivity"
            android:screenOrientation="landscape" />
        <activity android:name=".chats.ChatActivity" />
        <activity android:name=".profile.activities.ProfileActivity">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="vk.com"
                    android:scheme="https"
                    android:pathPrefix="/id" />
            </intent-filter>
        </activity>
        <activity android:name=".accounts.activities.AccountsActivity" />
    </application>

</manifest>