<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.twoeightnine.root.xvii">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <application
        android:name="com.twoeightnine.root.xvii.App"
        android:allowBackup="true"
        android:icon="@drawable/xvii512"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:largeHeap="true"
        android:theme="@style/AppTheme">

        <provider
            android:name="android.support.v4.content.FileProvider"
            android:authorities="com.twoeightnine.root.xvii.provider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/provider_paths"/>
        </provider>

        <receiver
            android:name=".background.RestarterBroadcastReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="restartAction" />
            </intent-filter>
        </receiver>
        
        <!--<service android:name=".background.LongPollService" />-->

        <service android:name=".background.NotificationService" />

        <service android:name=".background.PrimeGeneratorService" />

        <activity android:name=".activities.LoginActivity"
            android:theme="@style/SplashTheme"
            android:screenOrientation="portrait">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <activity android:name=".activities.RootActivity"
            android:screenOrientation="portrait"/>

        <activity android:name=".activities.PinActivity"
            android:screenOrientation="portrait"/>

        <activity android:name=".views.photoviewer.ImageViewerActivity"
            android:screenOrientation="portrait"/>

        <activity android:name=".activities.GifViewerActivity"
            android:screenOrientation="portrait"/>

        <activity android:name=".activities.VideoViewerActivity"
            android:screenOrientation="landscape" />

        <activity android:name=".activities.ExceptionActivity"
            android:screenOrientation="portrait" />

        <activity android:name=".activities.TestLandscapeActivity"
            android:screenOrientation="landscape" />
        <activity android:name=".chats.ChatActivity" />
    </application>

</manifest>